<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_rounded_corner"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/size_20">

        <TextView
            android:id="@+id/alert_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/size_15"
            android:paddingTop="@dimen/size_10"
            android:paddingRight="@dimen/size_15"
            android:paddingBottom="@dimen/size_10"
            android:text="@string/enter_link_title_"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_20"
            android:background="@drawable/white_bg_gray_outer"
            android:ems="10"
            android:hint="@string/url_title_"
            android:inputType="text"
            android:padding="@dimen/size_10"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_light"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_30"
                android:background="@drawable/btn_dark_gray_bg_style"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/size_10"
                android:text="@string/cancel_title_"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/submit_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_red_bg_style"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/size_10"
                android:text="@string/link_title_"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
