<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.CelebrityInfoFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_celebrities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10" />

            <RelativeLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cele_top_img" />

                    <TextView
                        android:id="@+id/m_title1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/cel_area_title"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_25" />
                </RelativeLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_8"
                    android:layout_marginRight="@dimen/size_8"
                    android:layout_marginBottom="@dimen/size_10"
                    android:background="@drawable/bg_round_white"
                    android:elevation="@dimen/size_3"
                    android:padding="@dimen/size_2">

                    <ImageView
                        android:id="@+id/cel_1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_3"
                    android:background="@drawable/bg_round_white"
                    android:elevation="@dimen/size_3"
                    android:padding="@dimen/size_2">

                    <ImageView
                        android:id="@+id/cel_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@drawable/bg_round_white"
                    android:elevation="@dimen/size_3"
                    android:padding="@dimen/size_2">

                    <ImageView
                        android:id="@+id/cel_3"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:scaleType="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_3"
                    android:background="@drawable/bg_round_white"
                    android:elevation="@dimen/size_3"
                    android:padding="@dimen/size_2">

                    <ImageView
                        android:id="@+id/cel_4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_8"
                    android:layout_marginRight="@dimen/size_8"
                    android:layout_marginBottom="@dimen/size_10"
                    android:background="@drawable/bg_round_white"
                    android:elevation="@dimen/size_3"
                    android:padding="@dimen/size_2">

                    <ImageView
                        android:id="@+id/cel_5"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="center" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/m_title2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_25"
                android:gravity="center"
                android:text="@string/cel_info2_title"
                android:textColor="@color/red_text_color"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/m_title3_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginBottom="@dimen/size_30"
                android:gravity="center"
                android:text="@string/cel_info3_title"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginRight="@dimen/size_15"
                android:background="@color/black"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/size_15">

                <TextView
                    android:id="@+id/m_title4_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_20"
                    android:gravity="center_horizontal"
                    android:text="@string/cel_info4_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/m_title5_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginBottom="@dimen/size_10"
                    android:gravity="center_horizontal"
                    android:text="@string/cel_info5_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/m_title6_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_20"
                    android:text="@string/how_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_v_down_arrow" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_celebrity_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginRight="@dimen/size_15"
                android:background="@drawable/white_bg_gray_border"
                android:padding="@dimen/size_20" />

            <TextView
                android:id="@+id/btn_buy_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_15"
                android:background="@drawable/btn_red_bg_style"
                android:gravity="center"
                android:padding="@dimen/size_10"
                android:text="@string/buy_now_title_"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <CheckBox
                android:id="@+id/cele_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginRight="@dimen/size_15"
                android:layout_marginBottom="@dimen/size_10"
                android:button="@drawable/red_check_box"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_5"
                android:text="@string/cele_info_agree_title"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginRight="@dimen/size_15"
                android:layout_marginBottom="@dimen/size_30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cele_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/red_check_box"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size_5"
                        android:text="@string/cele_info_agree_title"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/cele_pp_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5"
                        android:text="@string/p_agree_title"
                        android:textColor="@color/red_text_color"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/cele_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/s_end"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/cele_terms_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5"
                        android:singleLine="true"
                        android:text="@string/terms1_title_"
                        android:textColor="@color/red_text_color"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/red_check_box"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size_5"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/cele_terms2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cele_terms_title"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>