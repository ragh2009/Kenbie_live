<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.kenbie.fragments.CompanyFragment">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="@dimen/size_30"
        android:background="@drawable/company_logo"
        android:contentDescription="@string/todo"
        android:visibility="visible" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_50"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/t_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30"
        android:textColor="@color/c_b3b3b3"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/t_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_30"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:id="@+id/more_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_15"
            android:text="zcz"
            android:textColor="@color/c_b3b3b3"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/t_web_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="zcz"
            android:textColor="@color/red_text_color"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30"
        android:layout_marginBottom="@dimen/size_30"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_text_color"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/t_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginRight="@dimen/size_5"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/t_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/red_text_color"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</LinearLayout>
