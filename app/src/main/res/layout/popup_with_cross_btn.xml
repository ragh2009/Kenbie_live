<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_rounded_corner"
    android:paddingBottom="@dimen/size_15"
    android:paddingLeft="@dimen/size_10"
    android:paddingRight="@dimen/size_10"
    android:paddingTop="@dimen/size_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/m_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/get_mem_title_"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/m_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:gravity="center_horizontal"
            android:text="@string/get_mem_sub_title"
            android:textColor="@color/bg_btn_red_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/m_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            android:text="@string/get_mem_msg"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/m_mem_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/btn_red_bg_style"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_25"
            android:paddingRight="@dimen/size_25"
            android:paddingTop="@dimen/size_5"
            android:text="@string/mem_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/m_cross_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_cross_less_space" />
</RelativeLayout>
