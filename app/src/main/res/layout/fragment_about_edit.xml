<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.kenbie.fragments.AboutEditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/top_header_bar_with_save" />

        <EditText
            android:id="@+id/et_about"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginRight="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:background="@drawable/btn_white_bg_style"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/about_me_title"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:lines="10"
            android:padding="@dimen/size_10"
            android:textColor="@color/gray_light"
            android:textColorHint="@color/c_b3b3b3"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>


</LinearLayout>
